# ===========================================
# КОНФИГУРАЦИЯ TELEGRAM БОТА
# ===========================================

# Токен бота из @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===========================================
# КОНФИГУРАЦИЯ PROXYAPI (OpenAI)
# ===========================================

# API ключ от ProxyAPI.ru
PROXYAPI_KEY=your_proxyapi_key_here

# Базовый URL для ProxyAPI
PROXYAPI_BASE_URL=https://api.proxyapi.ru/openai/v1

# Модели для разных задач
# Для генерации идей и модерации (рекомендуется gpt-4o-mini для скорости)
MODEL_TEXT_GENERATION=gpt-4o-mini

# Для генерации финального поста (рекомендуется gpt-5 для качества и живости текста)
MODEL_FINAL_POST=gpt-5

# Для генерации изображений
MODEL_IMAGE_GENERATION=dall-e-3

# Для транскрибации голосовых сообщений
MODEL_SPEECH_TO_TEXT=whisper-1

# ===========================================
# ПАРАМЕТРЫ ГЕНЕРАЦИИ
# ===========================================

# Максимальное количество токенов для генерации текста
MAX_TOKENS_IDEAS=1500
# Для GPT-5 нужно больше токенов, т.к. модель использует reasoning tokens (внутренние рассуждения)
# Рекомендуется 6000+ для гарантированной генерации полного поста
MAX_TOKENS_POST=6000

# Температура (креативность) для генерации
TEMPERATURE_IDEAS=0.8
TEMPERATURE_POST=0.7
TEMPERATURE_IMAGE_PROMPT=0.9
TEMPERATURE_MODERATION=0.2

# ===========================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# ===========================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Максимальный размер одного лог-файла (в байтах, 10MB по умолчанию)
LOG_MAX_BYTES=10485760

# Количество резервных копий лог-файлов
LOG_BACKUP_COUNT=5

# Формат логов (simple, detailed, json)
LOG_FORMAT=detailed

# ===========================================
# ПАРАМЕТРЫ ПОВЕДЕНИЯ БОТА
# ===========================================

# Максимальное количество попыток отклонения от темы
MAX_OFF_TOPIC_ATTEMPTS=3

# Тайм-аут для typing indicator (секунды)
TYPING_TIMEOUT=2

# Минимальная задержка перед ответом (секунды)
MIN_RESPONSE_DELAY=0.5

# Максимальная задержка перед ответом (секунды)
MAX_RESPONSE_DELAY=3

# Коэффициент задержки на символ (секунды)
DELAY_PER_CHAR=0.01

# ===========================================
# РАСШИРЕННЫЕ НАСТРОЙКИ
# ===========================================

# Включить режим отладки (True/False)
DEBUG_MODE=False

# Сохранять ли сгенерированные изображения локально
SAVE_IMAGES_LOCALLY=False

# Папка для сохранения изображений (если включено)
IMAGES_FOLDER=generated_images

